@page "/StDashBoard"

<MudContainer MaxWidth="MaxWidth.Large" Style="margin-top: 30px">
    <MudGrid Justify="Justify.FlexStart">
        @if(_quizList != null){
        @foreach (var item in _quizList)
        {
            <MudItem xs="3">
                <MudCard Class="d-flex flex-column justify-content-between" Style="height:300px">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Secondary">I</MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.body1">@item.titre</MudText>
                            <MudText Typo="Typo.body2">@item.duree_quiz minutes</MudText>
                            <MudText Typo="Typo.body2">@item.nbr_questions questions</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    @*<MudCardMedia Image="images/pilars.jpg" Height="250" />*@
                    <MudCardContent Style="height:100%;max-height:200px;overflow-y: scroll">
                        <MudText Typo="Typo.body2">@item.description</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudText Typo="Typo.subtitle2">Passer le test</MudText>
                            <MudIconButton Icon="@Icons.Material.Filled.ArrowCircleRight" Color="Color.Default" OnClick="(()=>ExecuteQuiz(item))" />
                    </MudCardActions>
                </MudCard>
            </MudItem>
            }
        }
    </MudGrid>
</MudContainer>


