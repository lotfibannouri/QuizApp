@using Authentication.web.Shared.Questions
<MudGrid Cols="12">
      @foreach (var component in QuestionsList)
    {
        <MudItem xs="12" Class="horizontal-align">
            <MudCheckBox @bind-Checked="@checkedItem" Disabled="true" Class="mud-col"></MudCheckBox>
            <MudTextField T="string" Label="proposition" Variant="Variant.Text" Class="mud-col"></MudTextField>
            <MudFab Tag="component" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Delete" Size="Size.Small" OnClick="() => QuestionsList.Remove(component)" Class="mud-col" />
        </MudItem>   
    }
    
</MudGrid>

