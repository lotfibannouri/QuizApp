
<MudGrid >
    <MudItem xs="2" >
        <MudCheckBox @bind-Checked="@checkedItem" Disabled="true"></MudCheckBox>
    </MudItem>
    <MudItem>
        <MudTextField @bind-Value="TextValue" Label="proposition" Variant="Variant.Text"></MudTextField>
    </MudItem>
</MudGrid>


@code{


    [Parameter]
    public bool checkedItem { get; set; } = false;
    public string TextValue { get; set; }


}